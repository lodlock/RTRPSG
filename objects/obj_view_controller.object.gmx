            <string>///Control The View

//Move the View with the keys...

var right = keyboard_check(vk_right) || keyboard_check(ord('D')); 
var left = keyboard_check(vk_left) || keyboard_check(ord('A'));
var up = keyboard_check(vk_up) || keyboard_check(ord('W'));
var down = keyboard_check(vk_down) || keyboard_check(ord('S'));

if (right) {
    x += 6;
    global.follow_object = noone;    
}
if (left) {
    x -= 6;
    global.follow_object = noone;    
}
if (up) {
    y -= 6;
    global.follow_object = noone;   
}
if (down) {
    y += 6;
    global.follow_object = noone;   
}

// Move the view smoothly to the MMB
if ( mouse_check_button(mb_middle) ) {
    global.follow_object = noone;
    
    x += ( mouse_x - x ) * 0.025;
    y += ( mouse_y - y ) * 0.025;

}

// View Zooming.. SUCKS... need somethign better,....
if ( mouse_wheel_up() ) {
    if ( view_wview[0] &gt; 512 ) {
        var ratio;
        ratio = view_hport[0] / view_wport[0];
        view_wview[0] -= 32;
        view_hview[0] -= 32 * ratio;
    }

}
if ( mouse_wheel_down() ) {
    if ( view_wview[0] &lt; 1536 ) {
        var ratio;
        ratio = view_hport[0] / view_wport[0];
        view_wview[0] += 32;
        view_hview[0] += 32 * ratio;
    }

}

//follow the selected object smoothly

if ( global.follow_object != noone ) {
    x += ( global.follow_object.x - x ) * 0.025;
    y += ( global.follow_object.y - y ) * 0.025;

}

//Stay in the room!!!
x = clamp(x, 0, room_width);
y = clamp(y, 0, room_height);
</string>
